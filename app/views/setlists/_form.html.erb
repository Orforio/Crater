<%= form_for @setlist, html: { class: 'form-horizontal' } do |f| %>
	<% if @setlist.errors.any? %>
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-danger" role="alert">
				<h3><%= pluralize(@setlist.errors.count, "error") %> prohibited this setlist from being saved:</h3>
				<ul>
				<% @setlist.errors.full_messages.each do |message| %>
